<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      <span class="username-span">{{user.username}}</span> on <span class="date-span">{{format_date created_at}}</span>
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>